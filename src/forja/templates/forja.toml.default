# FORJA_TEMPLATE_VERSION=0.1.0
# Forja configuration file.
# Copy to project root as forja.toml to customize.
# Environment variables override any value here (e.g. FORJA_BUILD_TIMEOUT_STALL_MINUTES=15).

[build]
timeout_stall_minutes = 12
timeout_absolute_minutes = 20
max_cycles_per_feature = 5
auto_open = true
quality_visual_score = 70  # minimum visual evaluation score (0-100)
quality_probe_pass_rate = 70  # minimum endpoint probe pass rate (0-100)

[models]
kimi_model = "kimi-k2-0711-preview"
anthropic_model = "claude-opus-4-6"
openai_model = "gpt-4o"
validation_provider = "auto"  # auto, kimi, anthropic, openai

[context]
max_context_chars = 3000
max_learnings_chars = 2000

[observatory]
live_refresh_seconds = 5
